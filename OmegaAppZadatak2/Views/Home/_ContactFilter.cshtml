﻿﻿@model OmegaAppZadatak2.Models.ContactFilterModel

<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Index")" method="post" class="form-inline contacts-filter">
            <div class="form-group">
                @Html.EditorFor(p => p.Ime, new { htmlAttributes = new { @class = "form-control", placeholder = "Pretraga po imenu" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(p => p.Prezime, new { htmlAttributes = new { @class = "form-control", placeholder = "Pretraga po prezimenu" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(p => p.Grad, new { htmlAttributes = new { @class = "form-control", placeholder = "Pretraga po gradu" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(p => p.Opis, new { htmlAttributes = new { @class = "form-control", placeholder = "Pretraga po opisu" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(p => p.StringBrojeva, new { htmlAttributes = new { @class = "form-control", placeholder = "Pretraga po broju" } })
            </div>
            <button type="button" class="btn btn-default submit-button">Pretraga</button>
        </form>
    </div>
</div>